<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dismiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black"
    android:gravity="center">
    <!--项目规模-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/white_corner"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最小规模/㎡" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最大规模/㎡" />
        </LinearLayout>


        <TextView style="@style/CommonLineStyle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_min_area"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_stroke_bg"
                android:gravity="center"
                android:hint="㎡"
                android:inputType="numberDecimal"
                android:textSize="@dimen/address_key_size" />

            <EditText
                android:id="@+id/et_max_area"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_stroke_bg"
                android:gravity="center"
                android:hint="㎡"
                android:inputType="numberDecimal"
                android:textSize="@dimen/address_key_size" />

        </LinearLayout>


        <TextView style="@style/CommonLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_tab_blue" />


            <TextView style="@style/VerticalLineStyle" />


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_tab_blue" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
