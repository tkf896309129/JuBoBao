<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_style"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="注册手机号" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>



            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="合同号" />

                <TextView
                    android:id="@+id/tv_loan_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="出借人" />

                <TextView
                    android:id="@+id/tv_loan_man"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="借款人" />

                <TextView
                    android:id="@+id/tv_borrow_man"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/tv_card_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="公司所在地" />

                <TextView
                    android:id="@+id/tv_company_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="公司厂房"
                    android:textColor="@color/address_black_key" />

                <TextView
                    android:id="@+id/tv_company_house"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="公司现有设备" />

                <TextView
                    android:id="@+id/tv_tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="公司生产规模" />

                <TextView
                    android:id="@+id/tv_standard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="原欠贷款余额" />

                <TextView
                    android:id="@+id/tv_loan_rest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="逾期贷款余额" />

                <TextView
                    android:id="@+id/tv_loan_extra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="结欠利息" />

                <TextView
                    android:id="@+id/tv_jq_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>



            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="小写：" />

                <TextView
                    android:id="@+id/tv_small_write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="大写：" />

                <TextView
                    android:id="@+id/tv_large_write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="借款用途" />

                <TextView
                    android:id="@+id/tv_money_use"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />

            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="借款期限" />

                <TextView
                    android:id="@+id/tv_money_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />

            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/address_black_key"
                    android:layout_marginLeft="10dp"
                    android:text="还款资金来源" />

                <TextView
                    android:id="@+id/tv_money_from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/address_black_key"
                    android:text="还款方式" />

                <TextView
                    android:id="@+id/tv_money_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />



            <TextView style="@style/CommonLineStyle" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/gray_bg"
                android:gravity="center_vertical"
                android:textColor="@color/address_black_key"
                android:paddingLeft="10dp"
                android:text="营业执照" />

            <TextView style="@style/CommonLineStyle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_work_card"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_img" />
            </LinearLayout>


            <TextView style="@style/CommonLineStyle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="相关附件" />


            </RelativeLayout>

            <TextView style="@style/CommonLineStyle" />

            <com.example.huoshangkou.jubowan.view.ScrollGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"></com.example.huoshangkou.jubowan.view.ScrollGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
