<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_all"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ios_drawable_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_warm_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_error_title"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_error_title"
            style="@style/CommonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_warm_hint"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/alpha_all"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:text="请输入手机号码" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_button"
            android:background="@color/repair_price_gray" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_error_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_error_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alpha_all"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_tab_blue"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
