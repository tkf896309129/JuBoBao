<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/address_line_padding"
        android:paddingTop="@dimen/address_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="    收货人："
            android:textColor="@color/address_alpha_black"
            android:textSize="@dimen/address_key_size" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_key_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/address_line_padding"
        android:paddingTop="@dimen/address_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="联系电话："
            android:textColor="@color/address_alpha_black"
            android:textSize="@dimen/address_key_size" />

        <TextView
            android:id="@+id/tv_link_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_key_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/address_line_padding"
        android:paddingTop="@dimen/address_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收货地址："
            android:textColor="@color/address_alpha_black"
            android:textSize="@dimen/address_key_size" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_key_size" />

    </LinearLayout>

    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/ll_set_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_set_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dz_gouxuan_icon_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  设为默认"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/address_edit_size" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_delete_address"
            android:drawableLeft="@mipmap/dz_bianji_icon"
            android:gravity="center"
            android:text=" 编辑"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_edit_size" />


        <TextView
            android:id="@+id/tv_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/dz_shanchu_icon"
            android:gravity="center"
            android:text=" 删除"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_edit_size" />

    </RelativeLayout>

    <TextView
        style="@style/CommonLineStyle"
        android:layout_marginBottom="20dp" />

</LinearLayout>
