<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_style"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_my_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/main_tab_blue"
        app:tabSelectedTextColor="@color/main_tab_blue"
        app:tabTextColor="@color/address_black_key" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
