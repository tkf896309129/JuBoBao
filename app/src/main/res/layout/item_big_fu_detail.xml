<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_buy_pic"
            style="@style/StrokeImage"
            android:layout_width="112dp"
            android:scaleType="fitXY"
            android:layout_height="80dp"
            android:src="@mipmap/shen_ka_wang"/>

        <!--品牌、级别、规格、-->
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buy_image_size"
            android:layout_alignBottom="@+id/iv_buy_pic"
            android:layout_alignTop="@+id/iv_buy_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_buy_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:text="硅酮密封胶"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/buy_yuan_size"/>

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="杭州之江"
                android:textSize="@dimen/buy_yuan_size"/>

            <TextView
                android:id="@+id/tv_standard"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="好帮手771硅酮密封胶"
                android:textSize="@dimen/buy_yuan_size"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:lines="1"
                android:text="￥123.00/组"
                android:textColor="@color/red"
                android:textSize="@dimen/address_key_size"/>

        </LinearLayout>


        <!--加入购物车图片-->
        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/iv_buy_pic"
            android:src="@mipmap/gouwuche_icon"/>

    </RelativeLayout>

    <TextView style="@style/CommonLineStyle"/>


</LinearLayout>
