<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_car"
        style="@style/MainRelativityStyle"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_buy_pic"
            style="@style/StrokeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/no_pic" />

        <!--品牌、级别、规格、-->

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/iv_buy_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_buy_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="品牌：耀皮"
                android:textSize="@dimen/buy_yuan_size" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="级别：一等品"
                android:textSize="@dimen/buy_yuan_size" />


        </LinearLayout>


        <LinearLayout
            android:layout_alignLeft="@+id/ll_1"
            android:layout_below="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_standard"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="规格：2200x1900"
                android:textSize="@dimen/buy_yuan_size" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="￥28500.00/吨"
                android:textSize="@dimen/address_key_size" />
        </LinearLayout>

        <!--品类、厚度-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ll_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="品类：白玻"
                android:textSize="@dimen/buy_yuan_size" />

            <TextView
                android:id="@+id/tv_thick"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="厚度：12mm"
                android:textSize="@dimen/buy_yuan_size" />
        </LinearLayout>


        <!--加入购物车图片-->
        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_buy_pic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/gouwuche_icon" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/iv_car"
            style="@style/CommonLineStyle" />
    </RelativeLayout>




</LinearLayout>
