<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">


    <RelativeLayout
        android:id="@+id/rl_yhj"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/yhj_deep">

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="6天白条免息券"
            android:textColor="@color/white"
            android:textSize="22dp"/>

        <ImageView
            android:layout_alignTop="@+id/tv_days"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yhj_hint"/>

        <ImageView
            android:layout_alignTop="@+id/tv_days"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yhj_hint"/>

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_days"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="期限：2019.1.1~2019.3.31"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_times"
            android:layout_centerHorizontal="true"
            android:text="每笔白条券只能使用一张"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rules"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="解释权归浙江火山口网络科技有限公司所有"
            android:textColor="@color/white"
            android:textSize="12dp"/>

    </RelativeLayout>
</LinearLayout>
