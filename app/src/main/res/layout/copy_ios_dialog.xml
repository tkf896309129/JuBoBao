<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/alpha_all"
                android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ios_drawable_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alertdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/alpha_all"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp"
            android:text="请输入手机号码"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_key_size"/>

        <EditText
            android:id="@+id/et_alertdialog_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_alertdialog_title"
            android:background="@drawable/gray_corner_bg"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/address_black_key"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"/>

        <TextView
            style="@style/CommonLineStyle"
            android:layout_above="@+id/ll_button"/>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_alertdialog_phone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alpha_all"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_tab_blue_white"
                android:textSize="@dimen/address_key_size"/>

            <TextView
               style="@style/VerticalLineStyle"/>

            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/alpha_all"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_tab_blue_white"
                android:textSize="@dimen/address_key_size"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
