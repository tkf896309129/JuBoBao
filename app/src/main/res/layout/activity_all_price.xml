<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_style"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="材料费用" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/et_tool_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textSize="@dimen/address_key_size" />

            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="工时费" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/et_hour_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textSize="@dimen/address_key_size" />

            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="差旅费" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/et_trans_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textSize="@dimen/address_key_size" />
            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="其他费用" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/et_other_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/et_blank_bg"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textSize="@dimen/address_key_size" />

            </LinearLayout>

            <TextView style="@style/CommonLineStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="电费/用电数量(单月/上月)说明" />

            <EditText
                android:id="@+id/et_remark_1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_stroke_bg"
                android:gravity="left|top"
                android:padding="10dp"
                android:textSize="@dimen/address_key_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="加工厂月产能说明" />

            <EditText
                android:id="@+id/et_remark_2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gray_stroke_bg"
                android:gravity="left|top"
                android:padding="10dp"
                android:textSize="@dimen/address_key_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
