<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_buy_pic"
            style="@style/StrokeImage"
            android:layout_width="@dimen/buy_image_size"
            android:layout_height="@dimen/buy_image_size"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/no_pic"/>

        <!--品牌、级别、规格、-->

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="120dp"
            android:layout_height="@dimen/buy_image_size"
            android:layout_alignBottom="@+id/iv_buy_pic"
            android:layout_alignTop="@+id/iv_buy_pic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_buy_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/buy_yuan_size"/>

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/buy_yuan_size"/>


            <TextView
                android:id="@+id/tv_standard"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/buy_yuan_size"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/address_black_key"
                android:textSize="@dimen/address_key_size"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ll_1"
            android:textColor="@color/address_black_key"/>

        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_cate"
            android:layout_below="@+id/tv_cate"
            android:layout_marginTop="4dp"
            android:textColor="@color/address_black_key"/>

        <!--加入购物车图片-->
        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/gouwuche_icon"/>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/gray_corner_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="查看详情"
                android:textColor="@color/white_all"/>

            <TextView
                android:id="@+id/tv_commit_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/blue_all_corner"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="立即下单"
                android:textColor="@color/white_all"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView style="@style/CommonLineStyle"/>

</LinearLayout>
