<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/MainRelativityStyle"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_pic"
        android:text="唐凯丰"
        android:textColor="@color/address_black_key"
        android:textSize="@dimen/address_key_size"/>

    <TextView
        android:id="@+id/tv_check_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="2dp"
        android:text="2019-09-01"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_check_time"
        android:layout_below="@+id/tv_check_time"
        android:layout_marginBottom="4dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/tv_approve_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginRight="10dp"
        android:text="不同意"
        android:textSize="@dimen/address_key_size"/>

    <TextView
        style="@style/CommonLineStyle"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
