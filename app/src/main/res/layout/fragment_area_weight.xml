<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/address_alpha_black"
            android:layout_marginLeft="20dp"
            android:text="厚度(mm)"/>


        <EditText
            android:id="@+id/et_thick"
            style="@style/CommonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:background="@drawable/et_blank_bg"
            android:textColorHint="@color/address_alpha_black"
            android:textColor="@color/address_black_key"
            android:gravity="left|center_vertical"
            android:hint="请输入厚度"
            android:inputType="numberDecimal"
            android:maxLength="10"/>
    </RelativeLayout>

    <TextView style="@style/CommonLineStyle"/>

    <RelativeLayout style="@style/MainRelativityStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/address_alpha_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="面积(㎡)"/>

        <EditText
            android:id="@+id/et_area"
            style="@style/CommonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColorHint="@color/address_alpha_black"
            android:textColor="@color/address_black_key"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="left|center_vertical"
            android:hint="请输入面积"
            android:inputType="numberDecimal"
            android:maxLength="10"/>
    </RelativeLayout>

    <TextView style="@style/CommonLineStyle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="面积值"
        android:textColor="@color/main_tab_blue_white"/>

    <TextView style="@style/CommonLineStyle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_ton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吨"
                android:textColor="@color/address_black_key"/>
        </LinearLayout>

        <TextView style="@style/VerticalLineStyle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_weight_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重量箱"
                android:textColor="@color/address_black_key"/>
        </LinearLayout>

        <TextView style="@style/VerticalLineStyle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公斤"
                android:textColor="@color/address_black_key"/>
        </LinearLayout>

        <TextView style="@style/VerticalLineStyle"/>

    </LinearLayout>

    <TextView style="@style/CommonLineStyle"/>

</LinearLayout>
