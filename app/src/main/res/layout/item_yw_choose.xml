<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_approve_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/baoxiao_icon"/>

        <TextView
            android:id="@+id/tv_approve_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_approve_type"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/address_black_key"
            android:textSize="@dimen/address_key_size"/>

        <TextView
            style="@style/VerticalLineStyle"
            android:layout_alignParentRight="true"
            android:background="@color/line_color"/>

        <TextView
            style="@style/CommonLineStyle"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>
