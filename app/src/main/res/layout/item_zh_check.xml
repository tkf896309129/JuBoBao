<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_gonyi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/iv_delete_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignRight="@+id/iv_gonyi"
        android:layout_alignTop="@+id/iv_gonyi"
        android:layout_marginTop="4dp"
        android:src="@mipmap/red_delete"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gonyi"
        android:textColor="@color/address_alpha_black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="陈到鸿"/>
</RelativeLayout>
