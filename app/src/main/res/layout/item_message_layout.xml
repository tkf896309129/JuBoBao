<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/MainRelativityStyle"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/tz_dianzan_icon" />

        <TextView
            android:id="@+id/tv_message_type"
            style="@style/CommonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_message_type"
            android:text="回复我的" />


        <ImageView style="@style/PersonGrayRightStyle" />


    </RelativeLayout>

    <TextView style="@style/CommonLineStyle" />


</LinearLayout>
