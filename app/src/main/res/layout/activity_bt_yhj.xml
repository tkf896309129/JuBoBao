<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/tool_bar_style"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_bt_yhj"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/main_tab_blue"
        app:tabSelectedTextColor="@color/main_tab_blue"
        app:tabTextColor="@color/main_tab_blue_alpha"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_bt_yhj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
