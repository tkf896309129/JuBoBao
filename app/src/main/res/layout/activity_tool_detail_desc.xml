<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_style"></include>


    <LinearLayout
        android:id="@+id/ll_tool_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="设备名称" />

        <TextView
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_too_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="数量" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:inputType="numberDecimal"
            android:id="@+id/et_tool_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="品牌" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_tool_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="类型" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_tool_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="购买时间" />

        <TextView
            android:textSize="@dimen/address_key_size"
            android:id="@+id/tv_buy_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="历史数据" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_history_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="尺寸" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_tool_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />

    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="备注" />

        <EditText
            android:textSize="@dimen/address_key_size"
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_blank_bg"
            android:gravity="right|center_vertical"
            android:lines="1" />
    </LinearLayout>

    <TextView style="@style/CommonLineStyle" />

</LinearLayout>
