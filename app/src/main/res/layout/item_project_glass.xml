<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_project"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/show_blue_view">

        <ImageView
            android:id="@+id/img_project_glass"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shen_ka_wang"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_project_glass"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/img_project_glass"
            android:singleLine="true"
            android:text="天津市介腾红利玻璃有限公司"
            android:textColor="@color/address_black_key"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_jia_gon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="4dp"
            android:text="加工产能：1286㎡"
            android:textColor="@color/address_black_key"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_jia_gon"
            android:layout_below="@+id/tv_jia_gon"
            android:layout_marginTop="4dp"
            android:text="服务满意度：60%"
            android:textColor="@color/address_black_key"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_project_glass"
            android:layout_alignLeft="@+id/tv_service"
            android:layout_marginTop="4dp"
            android:textColor="@color/address_alpha_gray_black_key"
            android:textSize="14dp"/>

    </RelativeLayout>

</LinearLayout>
